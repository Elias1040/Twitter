@page
@model Twitter19.Pages.SignupModel
@{
}
<div class="container border border-muted shadow loginContainer justify-content-center">
    <h2 class="m-3">Signup</h2>
    <div class="mt-3">
        <form method="post">
            <div class="inputContainer">
                <img src="~/perm_identity_black_24dp.svg" alt="Email" />
                <input class="Input" oninput="validationE(this.value)" placeholder="Email" type="email" asp-for="Email" required />
                <img src="~/check.png" alt="Valid" height="24px" width="24px" id="email" class="d-none" />
            </div>
            <div class="inputContainer">
                <img src="~/lock_black_24dp.svg" alt="Password" />
                <input class="Input" oninput="validationP(this.value)" placeholder="Password" type="password" asp-for="Password" id="psw" />
                <img src="~/check.png" alt="Valid" height="24px" width="24px" id="password" class="d-none" />
            </div>
            <div class="inputContainer">
                <img src="~/lock_black_24dp.svg" alt="Confirm password" />
                <input class="Input" oninput="validationCP(this.value)" placeholder="Confirm password" type="password" asp-for="CPassword" required />
                <img src="~/check.png" alt="Valid" height="24px" width="24px" id="cPassword" class="d-none" />
            </div>
            <div class="mt-4 mb-3">
                <input type="submit" disabled id="SignupSubmit" value="Signup" class="d-block btn btn-primary mr-auto ml-auto mt-2" />
                <a class="d-block m-2" asp-page="Login">Login</a>
            </div>
        </form>
    </div>
</div>