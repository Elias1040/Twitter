<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Twitter</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container mt-4">
        <main role="main" class="pb-3 d-flex justify-content-center">
            <div class="d-inline-flex flex-column text-left navCon">
                <a class="mb-4 h5 text-dark text-decoration-none" href="#">Home</a>
                <a class="mb-4 h5 text-dark text-decoration-none" href="#">Explore</a>
                <a class="mb-4 h5 text-dark text-decoration-none" href="#">Notifications</a>
                <a class="mb-4 h5 text-dark text-decoration-none" href="#">Messages</a>
                <a class="mb-4 h5 text-dark text-decoration-none" href="#">Bookmarks</a>
                <a class="mb-4 h5 text-dark text-decoration-none" href="#">Lists</a>
                <a class="mb-4 h5 text-dark text-decoration-none" href="#">Profile</a>
                <a class="mb-4 h5 text-dark text-decoration-none" href="#">Tweet</a>
            </div>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Twitter - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
