@page
@model Twitter.Pages.LoginModel
@{
}
<div class="container border border-muted shadow loginContainer" style="width: 450px!important; max-width: 500px!important; height: 360px; ">
    <div class="m-3">
        <h2 class="d-inline-block">Login</h2>
    </div>
    <div class="mt-3 d-flex justify-content-center m-auto">
        <form method="post">
            <div class="d-block ">
                <div class="d-block text-center">
                    <div class="d-inline-block" style="width: 250px;">
                        <div class="inputContainer">
                            <img src="~/perm_identity_black_24dp.svg" alt="Email" />
                            <input class="Input" placeholder="Email" type="email" asp-for="Email" />
                        </div>
                        <div class="inputContainer">
                            <img src="~/lock_black_24dp.svg" alt="Password" />
                            <input class="Input" placeholder="Password" type="password" asp-for="Password" />
                        </div>
                        <div class="mt-4 d-block">
                            <input type="submit" value="Login" class="d-block btn btn-primary mr-auto ml-auto mt-3 float-right" />
                        </div>
                    </div>
                </div>
                <a class="d-block m-2" asp-page="Signup">Signup</a>
            </div>
        </form>
    </div>
</div>